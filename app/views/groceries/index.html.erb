<div class="grocery-title title-flexbox">
	<%= link_to "javascript:history.back()" do %>
    <i class="fas fa-arrow-left blue-icon title-arrow"></i>
  <% end %>

	<h1>Liste de courses</h1>
</div>


<div class="main-box">
	<div class="white-box">
		<% @groceries.each do |grocery| %>
		  <div class="grocery-items <%= 'last' if grocery == @groceries.last %>">
		  		<div>
		      	<%= grocery.measure.quantity %> <%= grocery.measure.ingredient.unit %> - <%= grocery.measure.ingredient.name %>
		  		</div class="text">
		      <%= link_to grocery_path(grocery), method: :delete do  %>
		        <i class="far fa-trash-alt"></i>
		      <% end %>
		    </div>
		<% end %>
	</div>

	<div class="message-container">
		<div class="message">
			<h3>Il vous manque un ingrédient ?</h3>
			<p>Ajoutez le à partir d'une recette et retrouvez tous vos ingrédients dans votre liste de course !</p>
			<i class="fas fa-cart-arrow-down show-icon grocery"></i>
		</div>
	</div>
</div>

