<div class="container form">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Mettre à jour mon compte <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name,
                      label: "Quel est votre prénom?",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      autofocus: true,
                      input_html: { autocomplete: "first_name"} %>
          <%= f.input :last_name,
                      label: "Et votre nom de famille?",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      autofocus: true,
                      input_html: { autocomplete: "last_name"} %>
          <%= f.input :username,
                      label: "Comment voulez-vous qu'on vous appelle?",
                      placeholder: "nom d'utilisateur",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      autofocus: true,
                      required: false,
                      input_html: { autocomplete: "username"} %>
          <%= f.input :email,
                      label: "Comment peut-on vous joindre?",
                      placeholder: "votre.adresse@email.fr",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :photo, as: :file %>
          <%= f.input :address,
                      label: "Quelle est votre adresse? (pour vous envoyer des cartes postales)",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      autofocus: true,
                      input_html: { autocomplete: "address"} %>
          <%= f.input :birthdate,
                      as: :date,
                      html5: true,
                      label: "Enfin, quelle est votre date de naissance? (promis, on le garde pour nous)",
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      autofocus: true,
                      input_html: { autocomplete: "birthdate"} %>
          <%= f.input :password,
                      hint: "Laissez vide si vous ne voulez pas en changer.",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Merci de saisir votre mot de passe pour confirmer les modifications",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Mettre à jour", class: "btn-blue" %>
        </div>
      <% end %>
      <div class="delete-account">
        <h3>Supprimer votre compte</h3>
        <p>Vous voulez nous quitter? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Sûr-sûr?" }, method: :delete %></p>
        <%= link_to "Retour", :back %>
      </div>

    </div>
  </div>
</div>

